package br.com.pmwork.propertyeditors;

import java.beans.PropertyEditorSupport;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import br.com.pmwork.model.entity.Projeto;
import br.com.pmwork.model.repositories.ProjetoRepositories;



@Component
public class ProjetoPropertyEditor extends PropertyEditorSupport {

	@Autowired private ProjetoRepositories projetoRepositories;
	
	public void setAsText(String text) throws IllegalArgumentException{
		long idProjeto = Long.parseLong(text);
		Projeto projeto = projetoRepositories.findOne(idProjeto);
		setValue(projeto);
	}
}
