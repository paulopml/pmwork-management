<script>
function allowDrop(ev) {
    ev.preventDefault();
}

function drag(ev) {
    ev.dataTransfer.setData("text", ev.target.id);
}

function drop(ev) {
    ev.preventDefault();
    var data = ev.dataTransfer.getData("text");
    ev.target.appendChild(document.getElementById(data));
}
</script>
<div class="container">
	<div class="row">
		<div class="col-lg-12">			
			<div id="div1" class="panel" ondrop="drop(event)" ondragover="allowDrop(event)">
			   <div class="panel-heading  panel-primary">
					Aberto
			   </div>
			  <img src="img_w3slogo.gif" draggable="true" ondragstart="drag(event)" id="drag1" width="88" height="31">
			  <div class="panel panel-info" draggable="true" ondragstart="drag(event)" id="drag2">
			  	Teste
			  </div>
			</div>
			
			<div id="div2" class="panel panel-default" ondrop="drop(event)" ondragover="allowDrop(event)">
				<div class="panel-heading">
					Em andamento
				</div>
			
			</div>
			
			<div id="div3" class="panel panel-default" ondrop="drop(event)" ondragover="allowDrop(event)">
				<div class="panel-heading">
					Fechado
			   </div>
			</div>
		</div>
	</div>
</div>	